<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bobsoccer" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary_accent</item>

        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="Bobsoccer.Toolbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/theme_toolbar_background</item>
        <item name="backgroundStacked">@color/theme_toolbar_background</item>
        <item name="backgroundSplit">@color/theme_toolbar_background</item>
    </style>

    <style name="Bobsoccer.Toolbar.Tab" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

</resources>
