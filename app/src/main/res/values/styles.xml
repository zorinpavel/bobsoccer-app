<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bobsoccer" parent="Base.Bobsoccer" />

    <style name="Base.Bobsoccer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_primary_accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/app_window_background_light</item>
    </style>

    <style name="Bobsoccer.NavigationView" parent="Widget.Design.NavigationView" />

    <style name="Bobsoccer.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/theme_toolbar_background</item>
        <item name="backgroundStacked">@color/theme_toolbar_background</item>
        <item name="backgroundSplit">@color/theme_toolbar_background</item>
        <item name="titleTextStyle">@style/Bobsoccer.Toolbar.Title</item>
    </style>

    <style name="Bobsoccer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Bobsoccer.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/theme_toolbar_text_color</item>
    </style>

    <style name="Bobsoccer.Toolbar.Title.Expanded" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Bobsoccer.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabBackground">@drawable/tab_item_background</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/Bobsoccer.TabLayout.TextAppearance</item>
        <item name="tabSelectedTextColor">@color/theme_tab_text_color</item>
    </style>

    <style name="Bobsoccer.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/theme_tab_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Bobsoccer.CardView" parent="CardView">
        <item name="android:background">@color/theme_cardview_background</item>
        <item name="android:layout_marginLeft">@dimen/cardview_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/cardview_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/cardview_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/cardview_margin_vertical</item>
    </style>

    <style name="Bobsoccer.CardView.Header" parent="TextAppearance.AppCompat.Title" />

    <style name="Bobsoccer.CardView.Forward" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>


    <style name="Bobsoccer.BlogView" />

    <style name="Bobsoccer.BlogView.Header" parent="Bobsoccer.CardView.Header" />

    <style name="Bobsoccer.BlogView.Anounce">
        <item name="android:textSize">14sp</item>
    </style>

